= form_for @task do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :application_id
    = f.text_field :application_id
  .field
    = f.label :build_observed
    = f.text_field :build_observed
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :bz_id
    = f.number_field :bz_id
  .field
    = f.label :reporter_id
    = f.text_field :reporter_id
  .field
    = f.label :assignee_id
    = f.text_field :assignee_id
  .field
    = f.label :status_id
    = f.text_field :status_id
  .field
    = f.label :browser_id
    = f.text_field :browser_id
  .actions
    = f.submit 'Save'
