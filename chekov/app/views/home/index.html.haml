
= render :partial => "partials/headermenu"

%div#gradient

= render :partial => "partials/flashmessages", :locals => { :flash => flash }

%div#app-wrapper
  %header
    %h1
      *
      %span.app-name>=app_version
    = render :partial => "partials/statusfilterselect", :locals => { :status_list => @status_list }

    %span#new-task-button{ :data => { :reporter_id => me.id }}
      %button#new-task-init.chekov-button
        %span.plus +
        new task
    = render :partial => "partials/taskstats", :locals => { :stats => stats }

  %div.main

    %table#task-table{ :role => 'main' }
      %thead
        %tr.header-row
          %th.id-header id
          %th app
          %th build
          %th description
          %th browser
          %th bz id
          %th reporter

      - if !task_list.empty?
        - task_list.each do |task|
          = render :partial => "partials/taskrowview", :locals => { :task => task }
      - else
        = render :partial => "partials/emptytableview", :locals => { :filter => params[:filter] } #"<null>" }