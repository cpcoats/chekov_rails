= form_for @browser do |f|
  - if @browser.errors.any?
    #error_explanation
      %h2= "#{pluralize(@browser.errors.count, "error")} prohibited this browser from being saved:"
      %ul
        - @browser.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :shortname
    = f.text_field :shortname
  .actions
    = f.submit 'Save'
