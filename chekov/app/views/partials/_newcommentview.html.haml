%div#new-comment
  %h3 Add Comment on Task #{ comment.task.id }

  %fieldset
    %input#comment-taskid{ :name => "comment-taskid", :type => "hidden" }#{ comment.task.id }
    %input#comment-commenter{ :name => "comment-commenter", :type => "hidden" }#{ me.id }
    %ul
