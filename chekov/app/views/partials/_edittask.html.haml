
= render :partial => "partials/browserlistselect", :locals => { :browsers => edit_view.browsers }


%td{ :colspan => 8 }
  %div{ :class => [ 'comments-display', edit_view.status_name ], :data => { :comment_taskid => edit_view.id }}
    %h3 Comments on Task ##{edit_view.id}

    -comments.each do |comment|
      %hr
      %span.comment-byline by
        %strong=comment.commenter.short_name
        at
        =comment.comment_date #{{dateFormat datetime pattern='mmm dd, yyyy' time='hh:mi ap'}}
      %p.comment-description
        %strong Description:
        =comment.description
      %p.comment-assignee
        %strong Assignee:
        =comment.assignee.short_name

