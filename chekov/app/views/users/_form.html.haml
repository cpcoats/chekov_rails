= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :role
    = f.text_field :role
  .field
    = f.label :team
    = f.text_field :team
  .field
    = f.label :permission
    = f.text_field :permission
  .actions
    = f.submit 'Save'
